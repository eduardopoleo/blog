<% @articles.each do |article| %>
  <div class="blog-post">
    <%=link_to article_path(article), {:class =>"link_to-style"} do %>
	     <h2 class="blog-post-title"><%= raw article.title %></h2>
    <% end %>
    <p class="blog-post-meta"><%= article.created_at.strftime("%b %d, %Y") %></p>
    <p><%= raw Nokogiri::HTML.parse(article.text).css('p').first.text  %> ... <%= link_to 'Show More', article_path(article) %></p>
  </div><!-- /.blog-post -->	
<% end %>