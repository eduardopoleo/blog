<div class="blog-post">
	<h1 class="blog-post-title text-center"><%= raw @article.title %></h1>
	<p class="blog-post-meta"><%= @article.created_at.strftime("%b %d, %Y") %></p>
  <p><%= markdown @article.text %> </p>
</div><!-- /.blog-post -->

<%= link_to "Back to Articles...", articles_path%> 
<h2 class="comments-count"><%=@article.comments.count%> Comments</h2>
<%= render @article.comments.reverse%>
 
<%= render "comments/form" %>
