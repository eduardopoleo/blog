<div class="blog-post">
	            <h2 class="blog-post-title"><%= raw @article.title %></h2>

		       <%= link_to article_path(@article), method: :delete, data: {confirm: 'Are you sure?'} do %>
				  <i class="fa fa-eraser edit"></i>
				<% end %>

		       <%= link_to edit_article_path(@article) do %>
				  <i class="fa fa-pencil-square-o edit"></i>
				<% end %>

	            <p class="blog-post-meta"><%= @article.created_at.strftime("%b %d, %Y") %></p>
	            <p><%= raw simple_format(@article.text) %> </p>

	            
        </div><!-- /.blog-post -->
 
<h2 class="comments-count"><%=@article.comments.count%> Comments</h2>
<%= render @article.comments.reverse%>
 
<%= render "comments/form" %>