<div class="blog-post">
	            <h2 class="blog-post-title"><%= raw @article.title %></h2>
	            <p class="blog-post-meta"><%= @article.created_at.strftime("%b %d, %Y") %></p>
	            <p><%= raw @article.text %> </p>
        </div><!-- /.blog-post -->
 
<h2>Comments</h2>
<%= render @article.comments %>
 
<%= render "comments/form" %>
 
<%= link_to 'Edit Article', edit_article_path(@article) %> |
<%= link_to 'Back to Articles', articles_path %>