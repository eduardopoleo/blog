<div class="sidebar-module sidebar-module-inset">
  <h2 class= "heading">Categories</h2>
  <ul id='category-list'> 
    <% @categories.each do |cat| %>
      <li>
        <i class="fa fa-caret-right"></i>
        <%= link_to category_path(cat) do %>
          <%= "#{cat.name} (#{cat.articles.size})" %> 
        <% end %>
      </li>
    <%end%>
  </ul>

</div>

<div class="sidebar-module sidebar-module-inset">
  <h2 class= "heading">Latest Posts</h2>
  <ol class="list-unstyled">
    <%@articles.first(2).each do |article| %>
      <%=link_to article_path(article), {:class=>"link_to-style"} do %>
      <li class = "side-list"><%=article.title%></li>
      <% end %>
      <p class="side-list-date"><%= article.created_at.strftime("%b %d, %Y") %></p>
      <br>
    <%end%>
  </ol>
</div>

